{
  "_comment": "Local Second Mind Configuration",

  "_comment_global": "Global settings shared across multiple modules",
  "global": {
    "global_folder": "C:\\Users\\User\\Local Second Mind",
    "embed_model": "sentence-transformers/all-MiniLM-L6-v2",
    "device": "cpu",
    "batch_size": 32,
    "embedding_dimension": null,
    "tui_density_mode": "auto"
  },

  "_comment_ingest": "Ingest pipeline configuration",
  "ingest": {
    "roots": [
      "C:\\Users\\User\\Documents",
      {
        "path": "D:\\Writings",
        "tags": ["creative", "personal"],
        "content_type": "writing"
      }
    ],
    "persist_dir": ".chroma",
    "collection": "local_kb",
    "chroma_flush_interval": 2000,
    "manifest": ".ingest/manifest.json",
    "chunk_size": 1800,
    "chunk_overlap": 200,
    "chunking_strategy": "structure",
    "enable_ocr": false,
    "enable_ai_tagging": false,
    "tags_per_chunk": 3,
    "dry_run": false,
    "skip_errors": true,
    "enable_language_detection": false,
    "enable_translation": false,
    "translation_target": "en",
    "extensions": [".txt", ".md", ".rst", ".pdf", ".docx", ".html", ".htm"],
    "override_extensions": false,
    "exclude_dirs": [".cache", "node_modules", "__pycache__"],
    "override_excludes": false,
    "max_files": null,
    "max_seconds": null,
    "enable_versioning": false
  },

  "_comment_storage": "Vector database configuration (chromadb or postgresql)",
  "vectordb": {
    "provider": "chromadb",
    "persist_dir": ".chroma",
    "collection": "local_kb",
    "chroma_hnsw_space": "cosine"
  },

  "_comment_vectordb_postgresql": "Alternative: PostgreSQL with pgvector. Requires psycopg2-binary and pgvector extension.",
  "_vectordb_postgresql_example": {
    "provider": "postgresql",
    "collection": "local_kb",
    "connection_string": "postgresql://user:password@localhost:5432/lsm",
    "embedding_dimension": 384
  },

  "_comment_llm": "LLM configuration. Providers define connections; services map features to provider+model.",
  "llms": {
    "_comment_providers": "Provider connections. API keys can be omitted and provided via .env instead.",
    "providers": [
      { "provider_name": "openai", "api_key": "INSERT_YOUR_OPENAI_API_KEY" },
      { "provider_name": "gemini", "api_key": "INSERT_YOUR_GEMINI_API_KEY" },
      { "provider_name": "claude", "api_key": "INSERT_YOUR_CLAUDE_API_KEY" }
    ],
    "_comment_tiers": "Optional capability tiers. Agents can use tiers as defaults.",
    "tiers": {
      "quick": { "provider": "gemini", "model": "gemini-2.5-flash-lite" },
      "normal": { "provider": "openai", "model": "gpt-5.2" },
      "complex": { "provider": "claude", "model": "claude-haiku-4-5" }
    },
    "_comment_services": "Named services mapping features to a provider + model. 'default' is the fallback.",
    "services": {
      "default": { "provider": "openai", "model": "gpt-5.2" },
      "query":   { "provider": "openai", "model": "gpt-5.2", "temperature": 0.7, "max_tokens": 2000 },
      "decomposition": { "provider": "openai", "model": "gpt-5-nano", "temperature": 0.2, "max_tokens": 300 },
      "tagging": { "provider": "gemini", "model": "gemini-2.5-flash-lite", "temperature": 0.5, "max_tokens": 200 },
      "ranking": { "provider": "claude", "model": "claude-haiku-4-5", "temperature": 0.3, "max_tokens": 500 },
      "translation": { "provider": "openai", "model": "gpt-5.2", "temperature": 0.3, "max_tokens": 4000 }
    }
  },

  "_comment_query": "Query pipeline configuration",
  "query": {
    "mode": "grounded",
    "chat_mode": "single",
    "k": 12,
    "retrieve_k": null,
    "min_relevance": 0.25,
    "k_rerank": 6,
    "rerank_strategy": "hybrid",
    "no_rerank": false,
    "local_pool": null,
    "max_per_file": 2,

    "_comment_filters": "Optional query filters (can be overridden per-session in REPL)",
    "path_contains": null,
    "ext_allow": null,
    "ext_deny": null,
    "enable_query_cache": false,
    "query_cache_ttl": 3600,
    "query_cache_size": 100,
    "enable_llm_server_cache": true
  },

  "_comment_notes": "Global notes configuration (applies across all modes)",
  "notes": {
    "enabled": true,
    "dir": "notes",
    "template": "default",
    "filename_format": "timestamp",
    "integration": "none",
    "wikilinks": false,
    "backlinks": false,
    "include_tags": false
  },

  "_comment_chats": "Global chat transcript settings",
  "chats": {
    "enabled": true,
    "dir": "Chats",
    "auto_save": true,
    "format": "markdown"
  },

  "_comment_agents": "Agent framework settings",
  "agents": {
    "enabled": true,
    "agents_folder": "Agents",
    "max_tokens_budget": 200000,
    "max_iterations": 25,
    "max_concurrent": 5,
    "log_stream_queue_limit": 500,
    "context_window_strategy": "compact",
    "sandbox": {
      "allowed_read_paths": ["./docs", "./notes", "./.ingest", "./.chroma"],
      "allowed_write_paths": ["./Agents", "./notes"],
      "allow_url_access": true,
      "require_user_permission": {},
      "require_permission_by_risk": {},
      "execution_mode": "local_only",
      "force_docker": false,
      "limits": {
        "timeout_s_default": 30,
        "max_stdout_kb": 256,
        "max_file_write_mb": 10
      },
      "docker": {
        "enabled": false,
        "image": "lsm-agent-sandbox:latest",
        "network_default": "none",
        "cpu_limit": 1.0,
        "mem_limit_mb": 512,
        "read_only_root": true
      },
      "tool_llm_assignments": {}
    },
    "memory": {
      "enabled": true,
      "storage_backend": "auto",
      "_comment_storage_backend": "auto = postgresql when vectordb.provider=postgresql, otherwise sqlite",
      "_comment_sqlite_path": "Relative sqlite_path values are resolved under agents_folder",
      "sqlite_path": "memory.sqlite3",
      "postgres_connection_string": null,
      "postgres_table_prefix": "agent_memory",
      "ttl_project_fact_days": 90,
      "ttl_task_state_days": 7,
      "ttl_cache_hours": 24
    },
    "interaction": {
      "timeout_seconds": 300,
      "_comment_timeout_action": "deny = safe default, approve = auto-approve on timeout",
      "timeout_action": "deny"
    },
    "agent_configs": {
      "research": {
        "enabled": true,
        "max_iterations": 30,
        "default_remote_provider": "arxiv"
      },
      "writing": {
        "enabled": true,
        "max_iterations": 20
      },
      "synthesis": {
        "enabled": true,
        "max_iterations": 20,
        "target_format": "bullets",
        "target_length_words": 350
      },
      "curator": {
        "enabled": true,
        "max_iterations": 12,
        "stale_days": 365,
        "near_duplicate_threshold": 0.9,
        "top_near_duplicates": 25
      },
      "email_assistant": {
        "enabled": true,
        "provider": "gmail",
        "default_window_hours": 24,
        "max_results": 10
      },
      "calendar_assistant": {
        "enabled": true,
        "provider": "google_calendar",
        "default_window_days": 7
      },
      "news_assistant": {
        "enabled": true,
        "providers": ["nytimes", "guardian", "rss"],
        "default_window_hours": 24,
        "max_results": 8
      }
    },
    "_comment_schedules": "Optional scheduled agent runs. interval supports hourly|daily|weekly|<seconds>s|cron syntax.",
    "schedules": [
      {
        "agent_name": "curator",
        "params": {
          "topic": "--mode memory",
          "force_docker": false
        },
        "interval": "daily",
        "enabled": false,
        "concurrency_policy": "skip",
        "confirmation_mode": "auto"
      }
    ]
  },

  "_comment_modes": "Query mode definitions (grounded/insight/hybrid built-in, add custom modes here)",
  "modes": [
    {
      "_comment": "General research mode with basic providers",
      "name": "research",
      "synthesis_style": "grounded",
      "source_policy": {
        "local": {
          "min_relevance": 0.20,
          "k": 15,
          "k_rerank": 8
        },
        "remote": {
          "enabled": true,
          "rank_strategy": "weighted",
          "max_results": 10,
          "remote_providers": [
            "brave",
            "wikipedia",
            "arxiv"
          ]
        },
        "model_knowledge": {
          "enabled": true,
          "require_label": true
        }
      },
      "chats": {
        "auto_save": true,
        "dir": "Chats/Research"
      }
    },
    {
      "_comment": "STEM research with inline weight overrides - prioritizes academic sources",
      "name": "stem_research",
      "synthesis_style": "grounded",
      "source_policy": {
        "local": {
          "min_relevance": 0.25,
          "k": 12,
          "k_rerank": 6
        },
        "remote": {
          "enabled": true,
          "rank_strategy": "weighted",
          "max_results": 15,
          "remote_providers": [
            {"source": "arxiv", "weight": 0.95},
            {"source": "semantic_scholar", "weight": 0.9},
            {"source": "openalex", "weight": 0.85},
            {"source": "wikipedia", "weight": 0.5}
          ]
        },
        "model_knowledge": {
          "enabled": true,
          "require_label": true
        }
      }
    },
    {
      "_comment": "Humanities research - philosophy, theology, religious studies",
      "name": "humanities_research",
      "synthesis_style": "grounded",
      "source_policy": {
        "local": {
          "min_relevance": 0.20,
          "k": 15,
          "k_rerank": 8
        },
        "remote": {
          "enabled": true,
          "rank_strategy": "weighted",
          "max_results": 12,
          "remote_providers": [
            {"source": "philpapers", "weight": 0.95},
            {"source": "ixtheo", "weight": 0.9},
            {"source": "openalex", "weight": 0.75},
            {"source": "crossref", "weight": 0.7},
            {"source": "wikipedia", "weight": 0.5}
          ]
        },
        "model_knowledge": {
          "enabled": true,
          "require_label": true
        }
      }
    }
  ],

  "_comment_remote": "Optional preconfigured remote chains (by name).",
  "remote": {
    "chains": ["scholarly_discovery"]
  },

  "_comment_remote_provider_chains": "Optional named multi-step remote pipelines. map entries are 'output_field:input_field'.",
  "remote_provider_chains": [
    {
      "name": "Research Digest",
      "agent_description": "Use OpenAlex to discover candidate works, then enrich DOI metadata using Crossref.",
      "links": [
        {
          "_comment": "First link takes the chain input directly",
          "source": "openalex"
        },
        {
          "_comment": "Map output from previous link (N-1) into this link (N)",
          "source": "crossref",
          "map": [
            "doi:doi"
          ]
        }
      ]
    }
  ],

