# Local Second Mind - Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude) API Configuration
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Optional alias supported for Claude
CLAUDE_API_KEY=your_claude_api_key_here

# Gemini API Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Local (Ollama) Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Remote Providers
BRAVE_API_KEY=your_brave_search_api_key_here
LSM_WIKIPEDIA_USER_AGENT=LocalSecondMind/1.0 (contact: you@example.com)
LSM_ARXIV_USER_AGENT=LocalSecondMind/1.0 (contact: you@example.com)

# Semantic Scholar API (optional - increases rate limit)
# Register at: https://www.semanticscholar.org/product/api
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# CORE API (required for CORE provider)
# Register at: https://core.ac.uk/services/api
CORE_API_KEY=your_core_api_key_here
